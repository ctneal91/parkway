<% if @current_user.present? %>
  <h1><%= @current_user.first_name %></h1>
  <div class="btn">
    <%= link_to 'Sign Out', sign_out_path, method: :delete %>
  </div>
<% else %>
  <div class="btn">
    <%= link_to 'Sign In', sign_in_path %>
  </div>
  <p>or</p>
  <div class="btn">
    <%= link_to 'Create Account', sign_up_path %>
  </div>
<% end %>
